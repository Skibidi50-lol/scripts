chatTab:AddTextbox({
	Name = "Input",
	Default = "",
	TextDisappear = true,
	Callback = function(Value)
		_G.Input = Value
		if _G.Input ~= "" then
			print(_G.Input)
			local convertedText = convert(_G.Input)
			print(convertedText)
			sendchat(convertedText)
		end
	end	  
})

chatTab:AddDropdown({
	Name = "Style",
	Default = "ğŸ…°ğŸ…±ğŸ…²",
	Options = {"ğŸ…°ğŸ…±ğŸ…²","ğŸ…ğŸ…‘ğŸ…’","ğŸ‡¦ ğŸ‡§ ğŸ‡¨"},
	Callback = function(Value)
		print("lettersSetting changed to: " .. Value)
		if Value == "ğŸ…°ğŸ…±ğŸ…²" then
			lettersSetting = 1
		elseif Value == "ğŸ…ğŸ…‘ğŸ…’" then
			lettersSetting = 2
		else
			lettersSetting = 3
		end
	end    
})

--Respawn
respawnTab:AddParagraph("Respawn Where You Died:", "It will respawn your character where you died.")

respawnTab:AddButton({
	Name = "Respawn Where You Died",
	Callback = function()
		local player = game.Players.LocalPlayer
		local character = player.Character
		if not character or not character:FindFirstChild("HumanoidRootPart") then return end

		local deathPos = character.HumanoidRootPart.Position
		character:BreakJoints()

		player.CharacterAdded:Wait()
		local newChar = player.Character
		local hrp = newChar:WaitForChild("HumanoidRootPart", 5)
		if hrp then
			hrp.CFrame = CFrame.new(deathPos + Vector3.new(0, 3, 0))
		end
	end
})
